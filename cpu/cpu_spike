PUT /_watcher/watch/cpu_spike
{
  "trigger": {
    "schedule": {
      "interval": "1s"
    }
  },
  "metadata": {
    "window_size": "30s",
    "time_range": "2h"
  },
  "input": {
    "search": {
      "request": {
        "indices": ".marvel-es-*",
        "types": "node_stats,node",
        "body": {
          "post_filter": {
            "term": {
              "_type": {
                "value": "node"
              }
            }
          },
          "aggs": {
            "node_stats": {
              "filter": {
                "bool": {
                  "must": [
                    {
                      "range": {
                        "timestamp": {
                          "gte": "now-{{ctx.metadata.time_range}}"
                        }
                      }
                    }
                  ]
                }
              },
              "aggs": {
                "nodes": {
                  "terms": {
                    "field": "node_stats.node_id",
                    "size": 100
                  },
                  "aggs": {
                    "timeslots": {
                      "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{ctx.metadata.window_size}}"
                      },
                      "aggs": {
                        "cpu_usage": {
                          "max": {
                            "field": "node_stats.process.cpu.percent"
                          }
                        },
                        "moving_average": {
                          "moving_avg": {
                            "buckets_path": "cpu_usage",
                            "model": "ewma",
                            "window": 1200
                          }
                        }
                      }
                    },
                    "extendedStats": {
                      "extended_stats_bucket": {
                        "buckets_path": "timeslots > cpu_usage",
                        "sigma": 3.0
                      }
                    }
                  }
                }
              }
            }
          },
          "size": 100
        }
      }
    }
  },
  "throttle_period": "30m",
  "condition": {
    "script": {
      "inline": "return ctx.payload.aggregations.node_stats.nodes.buckets.any({it.timeslots.buckets[-1].moving_average.value.round(2) > it.extendedStats.std_deviation_bounds.upper});"
    }
  },
  "actions": {
    "log": {
      "transform": {
        "script": "names = ctx.payload.hits.hits.collectEntries{[(it._id):it._source.node.name]}; nodes=[]; ctx.payload.aggregations.node_stats.nodes.buckets.collect({if (it.timeslots.buckets[-1].moving_average.value.round(2) > it.extendedStats.std_deviation_bounds.upper) {nodes.push(names[it.key]+' ('+it.timeslots.buckets[-1].moving_average.value+'-'+it.timeslots.buckets[-1].moving_average.value.round(2)+'%)');}}); return nodes;"
      },
      "logging": {
        "text": "CPU Usage has moved outside normal bound on the following nodess:\n{{#ctx.payload._value}}{{.}}\n\n{{/ctx.payload._value}} "
      }
    }
  }
}

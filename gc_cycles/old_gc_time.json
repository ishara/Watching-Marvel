PUT /_watcher/watch/old_gc_time
{
  "trigger": {
    "schedule": {
      "interval": "1s"
    }
  },
  "metadata": {
    "window_size": "5m",
    "max_gc_time": 30
  },
  "input": {
    "search": {
      "request": {
        "indices": ".marvel-es-*",
        "types": "node_stats,node",
        "body": {
          "post_filter": {
            "term": {
              "_type": {
                "value": "node"
              }
            }
          },
          "aggs": {
            "node_stats": {
              "filter": {
                "bool": {
                  "must": [
                    {
                      "range": {
                        "timestamp": {
                          "gte": "now-{{ctx.metadata.window_size}}"
                        }
                      }
                    }
                  ]
                }
              },
              "aggs": {
                "nodes": {
                  "terms": {
                    "field": "node_stats.node_id",
                    "size": 100
                  },
                  "aggs": {
                    "timeslots": {
                      "date_histogram": {
                        "field": "timestamp",
                        "interval": "{{ctx.metadata.window_size}}"
                      },
                      "aggs": {
                        "total_gc_time": {
                          "max": {
                            "field": "node_stats.jvm.gc.collectors.old.collection_time_in_millis"
                          }
                        },
                        "gc_time_spent": {
                          "derivative": {
                            "buckets_path": "total_gc_time"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "size": 100
        }
      }
    }
  },
  "throttle_period": "30m",
  "condition": {
    "script": {
      "inline": "return ctx.payload.aggregations.node_stats.nodes.buckets.any({(it.timeslots.buckets.size > 0) && (it.timeslots.buckets[-1].gc_time_spent.value > ctx.metadata.max_gc_time)});"
    }
  },
  "actions": {
    "log": {
      "transform": {
        "script": "names = ctx.payload.hits.hits.collectEntries{[(it._id):it._source.node.name]}; return ctx.payload.aggregations.node_stats.nodes.buckets.collect({ if ((it.timeslots.buckets.size > 0) && (it.timeslots.buckets[-1].gc_time_spent.value > ctx.metadata.max_gc_time))names[it.key]+' ('+it.timeslots.buckets[-1].gc_time_spent.value+')'});"
      },
      "logging": {
        "text": "More than {{ctx.metadata.max_gc_time}}s has been spent on major GC's the following nodes in the last {{ctx.metadata.window_size}}:\n {{#ctx.payload._value}}{{.}}\n\n{{/ctx.payload._value}}"
      }
    }
  }
}
